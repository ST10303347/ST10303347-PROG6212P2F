@model IEnumerable<ST10303347_PROG6212P2F.Models.Claim>

@{
    ViewData["Title"] = "Pending Claims";
}

<div class="container mt-5">
    <h2 class="text-center" style="color: purple;">Pending Claims</h2>

    @if (!Model.Any())
    {
        <p class="text-center mt-4">There are no pending claims at the moment.</p>
    }
    else
    {
        <table class="table table-bordered table-hover mt-4">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Lecturer</th>
                    <th scope="col">Hours Worked</th>
                    <th scope="col">Hourly Rate</th>
                    <th scope="col">Total</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.Id</td>
                        <td>@claim.User</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourRate.ToString("C")</td>
                        <td>@claim.Total.ToString("C")</td>
                        <td>@claim.Status</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@claim.Id"
                               class="btn btn-sm btn-info">Details</a>

                            <form method="post" asp-action="Approve" asp-route-id="@claim.Id"
                                  style="display:inline;">
                                <button type="submit"
                                        class="btn btn-sm btn-primary me-2">
                                    Approve
                                </button>
                            </form>

                            <form method="post" asp-action="Reject" asp-route-id="@claim.Id"
                                  style="display:inline;">
                                <button type="submit"
                                        class="btn btn-sm btn-dark">
                                    Reject
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
