@model ClaimVM

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0" style="background-color: #f3e5f5;">
                <div class="card-header text-center" style="background-color: #9c27b0; color: white;">
                    <h2>Edit Claim</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input asp-for="Id" type="hidden" />

                        <div class="mb-3">
                            <label asp-for="HoursWorked" class="form-label" style="color: #9c27b0;">Hours Worked</label>
                            <input asp-for="HoursWorked" class="form-control"
                                   style="border-color: #9c27b0; focus-color: #9c27b0;"
                                   placeholder="Enter hours worked" />
                            <span asp-validation-for="HoursWorked" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HourRate" class="form-label" style="color: #9c27b0;">Hourly Rate</label>
                            <input asp-for="HourRate" class="form-control"
                                   style="border-color: #9c27b0;"
                                   placeholder="Enter hourly rate" />
                            <span asp-validation-for="HourRate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Total" class="form-label" style="color: #9c27b0;">Total Amount</label>
                            <input asp-for="Total" class="form-control"
                                   style="border-color: #9c27b0;"
                                   placeholder="Total will be calculated automatically"
                                   readonly />
                        </div>

                        <div class="mb-3">
                            <label for="SupportingDocument" class="form-label" style="color: #9c27b0;">Supporting Document</label>
                            <input asp-for="SupportingDocument" type="file" class="form-control"
                                   style="border-color: #9c27b0;" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary"
                                    style="background-color: #9c27b0; border-color: #9c27b0;">
                                Update Claim
                            </button>
                            <a asp-action="MyClaims" class="btn btn-secondary ml-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            // Automatically calculate total when hours or rate changes
            $('#HoursWorked, #HourRate').on('input', function() {
                var hours = parseFloat($('#HoursWorked').val()) || 0;
                var rate = parseFloat($('#HourRate').val()) || 0;
                $('#Total').val((hours * rate).toFixed(2));
            });
        });
    </script>
}