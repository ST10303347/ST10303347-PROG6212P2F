@model IEnumerable<ST10303347_PROG6212P2F.Models.Claim>

@{
    ViewData["Title"] = "All Claims";
}

<h1 class="text-center" style="color: purple;">All Claims</h1>



<table class="table table-bordered table-hover mt-3">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.User.UserName)</th>
            <th>@Html.DisplayNameFor(model => model.HoursWorked)</th>
            <th>@Html.DisplayNameFor(model => model.HourRate)</th>
            <th>@Html.DisplayNameFor(model => model.Total)</th>
            <th>@Html.DisplayNameFor(model => model.Status)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User"</td>
                <td>@item.HoursWorked</td>
                <td>@item.HourRate.ToString("C")</td>
                <td>@item.Total.ToString("C")</td>
                <td>@item.Status</td>
                <td>
                    @if (item.Status == ST10303347_PROG6212P2F.ENUMS.Status.Pending)
                    {
                        <form method="post" asp-action="Approve" asp-route-id="@item.Id" style="display:inline;">
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        </form>
                        <form method="post" asp-action="Reject" asp-route-id="@item.Id" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

