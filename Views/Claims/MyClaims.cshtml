@model IEnumerable<ST10303347_PROG6212P2F.Models.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<div class="container mt-5">
    <h2 class="text-center" style="color: purple;">My Claims</h2>

    @if (!Model.Any())
    {
        <p class="text-center mt-4">You have no submitted claims.</p>
    }
    else
    {
        <table class="table table-bordered table-hover mt-4">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Hours Worked</th>
                    <th scope="col">Hourly Rate</th>
                    <th scope="col">Total</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.Id</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourRate.ToString("C")</td>
                        <td>@claim.Total.ToString("C")</td>
                        <td>@claim.Status</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@claim.Id" class="btn btn-sm btn-info">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
